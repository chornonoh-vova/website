---
import clsx from "clsx";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  underline?: boolean;
}

const { underline, class: classNames, ...props } = Astro.props;
---

<a
  class={clsx([
    "decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 text-current hover:text-black hover:dark:text-white",
    { "underline underline-offset-2": underline },
    classNames,
  ])}
  {...props}
>
  <slot />
</a>
