---
interface Props {
  as?: string;
}

const { as: Component = "div" }: Props = Astro.props;
---

<Component
  class:list={[
    "relative",
    "prose",
    "max-w-none",
    "prose-neutral",
    "dark:prose-invert",
    "prose-h1:font-bold",
    "prose-h1:text-2xl",
    "prose-h2:text-xl",
    "prose-h2:font-semibold",
    "prose-img:rounded-md",
    "prose-headings:underline",
  ]}
>
  <slot />
</Component>
