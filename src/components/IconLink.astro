---
import Link from "./Link.astro";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const props = Astro.props;
---

<Link
  target="_blank"
  rel="noopener noreferrer"
  underline
  class="inline-flex items-center gap-2 rounded-sm border border-neutral-200 px-4 py-2 dark:border-neutral-700"
  {...props}
>
  <slot />
</Link>
